<main>
    <form method="POST">
        <input type="text" name="search" placeholder="Search...">
        
        <h2>Cat√©gorie</h2>
        <label for="clear">Toutes</label>
        <input value="all" type="radio" name="cat" id="clear">

        <% for (const category of categories) { %>
            <label for="<%= category %>"><%= category %></label>
            <input value="<%= category %>" type="radio" name="cat" id="<%= category %>">
        <% } %>

        <input type="submit" value="Search">
    </form>
    <div>
        <% for (const data of datas) { %>
            <article>
                <h3><%= data.title %></h3>
                <div>
                    <img src="/img/<%= data.src %>" alt="<%= data.title %>" class="card-img">
                    <a href="/liste/<%= data.id %>">
                        <img src="/img/file.svg" alt="">
                    </a>
                </div>
                <p><%= data.description %></p>
            </article>
        <% }%>
    </div>
</main>